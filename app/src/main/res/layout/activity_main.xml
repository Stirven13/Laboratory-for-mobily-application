<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/etID"
            app:layout_constraintStart_toStartOf="@+id/tvID" app:layout_constraintTop_toBottomOf="@+id/tvID"
    />
    <TextView
            android:text="ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvID"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/etName"
            app:layout_constraintStart_toStartOf="@+id/tvName" app:layout_constraintTop_toBottomOf="@+id/tvName"/>
    <TextView
            android:text="Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvName"
            app:layout_constraintStart_toStartOf="@+id/etID"
            app:layout_constraintTop_toBottomOf="@+id/etID" android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text=""
            android:ems="10"
            android:id="@+id/etEmail"
            app:layout_constraintStart_toStartOf="@+id/tvEmail" app:layout_constraintTop_toBottomOf="@+id/tvEmail"/>
    <TextView
            android:text="E-mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tvEmail"
            app:layout_constraintStart_toStartOf="@+id/etName"
            app:layout_constraintTop_toBottomOf="@+id/etName" android:layout_marginTop="20dp"/>
    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonClear"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="10dp" android:layout_marginBottom="40dp"/>
    <Button
            android:text="Update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonUpdate"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" app:layout_constraintStart_toEndOf="@+id/buttonClear"
            app:layout_constraintEnd_toStartOf="@+id/buttonDelete"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonDelete"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="10dp" android:layout_marginBottom="40dp"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAdd"
            app:layout_constraintBottom_toTopOf="@+id/buttonClear" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:layout_marginBottom="20dp"
            app:layout_constraintEnd_toStartOf="@+id/buttonRead"/>
    <Button
            android:text="Read"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonRead"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/buttonDelete"
            android:layout_marginEnd="10dp" android:layout_marginBottom="20dp"
            app:layout_constraintStart_toEndOf="@+id/buttonAdd"/>
</androidx.constraintlayout.widget.ConstraintLayout>