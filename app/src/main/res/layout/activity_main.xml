<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <Button
            android:text="Stop"
            android:onClick="onVideoStopClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonVideoStop"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/videoView"/>
    <Button
            android:text="Start"
            android:onClick="onVideoStartClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonVideoStart"
            app:layout_constraintTop_toBottomOf="@+id/videoView"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Pause"
            android:onClick="onVideoPauseClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonVideoPause"
            app:layout_constraintTop_toBottomOf="@+id/videoView"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/buttonVideoStart"
            app:layout_constraintEnd_toStartOf="@+id/buttonVideoStop"/>
    <VideoView
            android:layout_width="0dp"
            android:layout_height="300dp" android:id="@+id/videoView"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" android:layout_marginTop="10dp"/>
    <TextView
            android:text="Audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Audio"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/videoView"
            android:layout_marginStart="10dp" android:layout_marginTop="120dp"/>
    <Button
            android:text="Start"
            android:onClick="onAudioStartClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAudioStart"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/Audio"
            android:layout_marginTop="16dp" android:layout_marginStart="16dp"/>
    <Button
            android:text="Pause"
            android:onClick="onAudioPauseClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAudioPause"
            app:layout_constraintTop_toBottomOf="@+id/Audio"
            android:layout_marginTop="16dp" app:layout_constraintStart_toEndOf="@+id/buttonAudioStart"
            app:layout_constraintEnd_toStartOf="@+id/buttonAudioStop"/>
    <Button
            android:text="Stop"
            android:onClick="onAudioStopClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonAudioStop"
            app:layout_constraintTop_toBottomOf="@+id/Audio"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>